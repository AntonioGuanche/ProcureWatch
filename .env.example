## Environment
ENV=local

## Application
APP_NAME=procurewatch-api

## Database
# For production (PostgreSQL, e.g. Neon):
# DATABASE_URL=postgresql+psycopg://user:password@host.neon.tech/dbname?sslmode=require
# For local development (persistent SQLite file):
DATABASE_URL=sqlite+pysqlite:///./dev.db
# For quick tests (ephemeral in-memory SQLite):
# DATABASE_URL=sqlite+pysqlite:///:memory:

## CORS
ALLOWED_ORIGINS=*

## Logging
LOG_LEVEL=INFO

## Belgian e-Procurement (official API)
# Mode: official | playwright | auto
EPROC_MODE=official

# OAuth2 token endpoint (INT/PRD differ only by host; override in production if needed)
EPROC_OAUTH_TOKEN_URL=https://public.int.fedservices.be/api/oauth2/token

# Client credentials (never commit real values, use env only)
EPROC_CLIENT_ID=__REPLACE_ME__
EPROC_CLIENT_SECRET=__REPLACE_ME__

# Optional: underlying BOSA client IDs/secrets if you manage multiple tenants
BOSA_OAUTH_CLIENT_ID_INT=__REPLACE_ME__
BOSA_OAUTH_CLIENT_SECRET_INT=__REPLACE_ME__
BOSA_OAUTH_CLIENT_ID_PRD=__REPLACE_ME__
BOSA_OAUTH_CLIENT_SECRET_PRD=__REPLACE_ME__

# Base URLs for eProcurement APIs
EPROC_SEARCH_BASE_URL=https://public.int.fedservices.be/api/eProcurementSea/v1
EPROC_LOC_BASE_URL=https://public.int.fedservices.be/api/eProcurementLoc/v1
EPROC_TIMEOUT_SECONDS=30

## TED (EU Tenders Electronic Daily)
TED_MODE=official
TED_SEARCH_BASE_URL=https://api.ted.europa.eu
TED_TIMEOUT_SECONDS=30

## Email / notifications
EMAIL_MODE=file              # "file" | "smtp"
EMAIL_FROM=__REPLACE_ME__    # e.g. noreply@example.org
EMAIL_SMTP_HOST=__REPLACE_ME__
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USERNAME=__REPLACE_ME__
EMAIL_SMTP_PASSWORD=__REPLACE_ME__
EMAIL_SMTP_USE_TLS=true
EMAIL_OUTBOX_DIR=data/outbox
