## Environment
ENV=local

## Application
APP_NAME=procurewatch-api

## Database
DATABASE_URL=sqlite+pysqlite:///./dev.db

## CORS
ALLOWED_ORIGINS=*

## Logging
LOG_LEVEL=INFO

## Belgian e-Procurement (official API)
EPROC_MODE=official
EPROC_TIMEOUT_SECONDS=30

EPROCUREMENT_ENV=INT
EPROCUREMENT_INT_TOKEN_URL=https://public.int.fedservices.be/api/oauth2/token
EPROCUREMENT_INT_CLIENT_ID=__REPLACE_ME__
EPROCUREMENT_INT_CLIENT_SECRET=__REPLACE_ME__
EPROCUREMENT_PR_TOKEN_URL=https://public.pr.fedservices.be/api/oauth2/token
EPROCUREMENT_PR_CLIENT_ID=__REPLACE_ME__
EPROCUREMENT_PR_CLIENT_SECRET=__REPLACE_ME__

EPROC_SEARCH_BASE_URL=https://public.int.fedservices.be/api/eProcurementSea/v1
EPROC_LOC_BASE_URL=https://public.int.fedservices.be/api/eProcurementLoc/v1
EPROC_DOS_BASE_URL=https://public.int.fedservices.be/api/eProcurementDos/v1
EPROC_CPV_PROBE=false

## Legacy overrides (optional - for backward compatibility)
EPROC_OAUTH_TOKEN_URL=
EPROC_CLIENT_ID=
EPROC_CLIENT_SECRET=

## TED (EU Tenders Electronic Daily)
TED_MODE=official
TED_SEARCH_BASE_URL=https://api.ted.europa.eu
TED_TIMEOUT_SECONDS=30

## Email / notifications
EMAIL_MODE=file
EMAIL_FROM=__REPLACE_ME__
EMAIL_SMTP_HOST=__REPLACE_ME__
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USERNAME=__REPLACE_ME__
EMAIL_SMTP_PASSWORD=__REPLACE_ME__
EMAIL_SMTP_USE_TLS=true
EMAIL_OUTBOX_DIR=data/outbox

# ── Scheduler ──────────────────────────────────────
SCHEDULER_ENABLED=false
IMPORT_INTERVAL_MINUTES=360
IMPORT_SOURCES=BOSA,TED
IMPORT_TERM=*
IMPORT_PAGE_SIZE=50
IMPORT_MAX_PAGES=3
BACKFILL_AFTER_IMPORT=true
